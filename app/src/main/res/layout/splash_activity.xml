<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF66"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24sp"
        android:text="Your Wellness App"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#008000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="#bfff80"
        android:padding="16dp"
        android:text="NEW USER \n REGISTER HERE"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:background="#b3ffff"
        android:padding="16dp"
        android:text="EXISTING USER"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_enter_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:hint="ENTER YOUR MOBILE NUMBER HERE"
        android:padding="16dp" />

    <Button
        android:id="@+id/get_otp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="#bfff80"
        android:padding="20dp"
        android:text="GET OTP"
        android:textSize="16dp" />
</LinearLayout>